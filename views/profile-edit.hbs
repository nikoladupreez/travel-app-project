<section id='profile-container'>
    <img src="/images/profile-back.png" alt="background" id='profile-back'>
    <div id='edit-container'>
        <div id='edit-box'>
             <div class='back-link-box'>
                <a href="/profile" class='back-link'>Back</a>
            </div>
            <h1>EDIT PROFILE</h1>
            <form id='about-form' action='/{{user._id}}/edit' method='POST' enctype="multipart/form-data"> 
                <div id='add-file-box'>
                    <input type="file" name='image' id="file" value='{{user.image_URL}}'>
                    <label for="file" id="add-file">upload image</label>
                </div>
                <input required type="text" name='firstname' placeholder='Firstname' class='input-profile' value='{{user.firstname}}'> 
                <input required type="text" name='lastname' placeholder='Firstname' class='input-profile' value='{{user.lastname}}'> 
                <textarea maxlength='300' name="about" rows="50" cols="30" placeholder='About you' class='input-profile' id='textarea' value='{{user.about}}'></textarea> 
                <button type='submit' id='edit-btn'>Save</button>
            </form>
        </div>
    </div>
</section>