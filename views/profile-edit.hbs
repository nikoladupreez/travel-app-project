<section id='profile-container'>
    <img src="/images/profile-back.png" alt="background" id='profile-back'>
    <div id='edit-container'>
        <div id='edit-box'>
            <a href="/profile/{{userInfo._id}}" class='back-link'>Back</a>
            <h1>EDIT PROFILE</h1>
            <form id='about-form' action='/{{userInfo._id}}/edit' method='POST'> 
                <div id='add-file-box'>
                    <input type="file" name='image' id="file"/>
                    <label for="file" id="add-file">upload image</label>
                </div>
                <input required type="text" name='firstname' placeholder='Firstname' class='input-profile' value={{userInfo.firstname}}>
                <input required type="text" name='lastname' placeholder='Lastname' class='input-profile' value={{userInfo.lastname}}> 
                <textarea maxlength='300' name="about" rows="50" cols="30" placeholder='About you' class='input-profile' id='textarea'>{{userInfo.about}}</textarea>
                <button type='submit' id='edit-btn'>Save</button>
            </form>
        </div>
    </div>
</section>