<section>

     <div id='reset-view'>
        <div id='reset-box'>
            <div>
                <i class='close-btn'></i>
            </div>
             <form action="/" method='POST' id='reset-form'> {{!-- Fill in route details && Front end validation --}}
                <label for="email">Forgot your username? Fill in your email.</label>
                <input type="email" name='email' placeholder='Email' class='input'>
                <label for="username">Forgot your password? Fill in your username.</label>
                <input type="username" name='username' placeholder='Username' class='input'>
                <button type='submit' id='send-btn'>SEND</button>
            </form> 
        </div>
    </div>

    <div id='send-reset-view'>
        <div class='confirm-box'>
            <div>
                <i class='close-btn'></i>
            </div>
              <p>You've got mail! <br> Reset your credentials with the reset link.</p>
        </div>
    </div>

     <div id='input-reset-view'>
        <div id='username-reset'>
            <div>
                <i class='close-btn'></i>
            </div>
            <h1>RESET USERNAME</h1>
            <form action="/" method='POST' id='reset-username-form'> {{!-- Fill in route details && Front end validation --}}
                <input type="text" name='username' placeholder='Username' class='input'>
                <button type='submit' class='reset-btn'>CHANGE</button>
            </form> 
        </div>
        <div id='password-reset'>
            <div>
                <i class='close-btn'></i>
            </div>
            <h1>RESET PASSWORD</h1>
            <form action="/" method='POST' id='reset-password-form'> {{!-- Fill in route details && Front end validation --}}
                <input type="password" name='password' placeholder='Password' class='input'>
                <button type='submit' class='reset-btn'>CHANGE</button>
            </form> 
        </div>
    </div>

    <div id='confirm-reset-view'>
        <div class='confirm-box'>
            <div>
                <i class='close-btn'></i>
            </div>
              <p>Your credentials have been reset!</p>
              <button class='login-link'>GO TO LOGIN</button>
        </div>
    </div>    
</section>