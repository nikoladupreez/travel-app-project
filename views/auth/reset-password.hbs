<section class='reset-container'>
     <div id='input-reset-view'>
        <div id='password-reset'>
            <div class='back-link-box'>
                <a href="/" class='back-link'>Back</a>
            </div>
              <h1 class='reset-title'>RESET CREDENTIALS</h1>
              <form action="/reset-password" method='POST' id='reset-pw-form'> 
                <input required type="text" name='username' placeholder='Username' class='input-reset'>
                <input required type="password" name='password' placeholder='New password' class='input-reset'>
                <input type="hidden" name="token" value="{{token}}">
                <button type='submit' class='reset-btn' onclick="location.href='/login'"">RESET</button>
            </form> 
        </div>
    </div>
</section>