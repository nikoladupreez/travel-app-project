<section class='index-container'>
     <div id='signup-view'>
        <div id='signup-box'>
            <a href="/" class='back-link'>Back</a>
            <h1 id='hi'>HI THERE <br> STRANGER!</h1>
            <form action="/" method='POST' id='signup-form'> {{!-- Fill in route details && Front end validation --}}
                <input required type="text" name='firstname' placeholder='Firstname' class='input-sign'>
                <input required type="text" name='lastname' placeholder='Lastname' class='input-sign'>
                <input required type="email" name='email' placeholder='Email' class='input-sign'>
                <input required type="text" name='username' placeholder='Username' class='input-sign'>
